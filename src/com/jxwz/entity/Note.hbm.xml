<?xml version="1.0"?>    
<!DOCTYPE hibernate-mapping PUBLIC     
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"    
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">    
        
<!--     
    <hibernate-mapping>一般不去配置，采用默认即可。    
    default-cascade="none"：默认的级联风格，表与表联动。    
    default-lazy="true"：默认延迟加载    
 -->    
<hibernate-mapping>    
    <class name="com.jxwz.entity.Note" table="t_note" dynamic-insert="true" dynamic-update="true" optimistic-lock="version">    
        <id name="id" column="id">    
            <generator class="native"/>    
        </id>    
        <property name="createTime" column="create_time" />    
        <property name="status" column="status"/>  
        <property name="createDateStr" column="create_date_str"/>  
        
        <property name="content" column="content"/>    
        <many-to-one name="section" class="com.jxwz.entity.Section" column="section_id" cascade="none"/>
        <many-to-one name="student" class="com.jxwz.entity.User" column="student_id" cascade="none"/>
    </class>    
</hibernate-mapping>    
